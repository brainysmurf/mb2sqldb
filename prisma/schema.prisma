// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/dev.db?connection_limit=1&connect_timeout=30"
}

model Student {
  id      Int      @id
  email   String   @unique
  archived Boolean
  first_name    String
  last_name    String
  gender String?
  birthday String?
  grade String?
  mb_student_id String?
  parents ParentStudentRelationship[]
  classes Section[]
  termGrades TermGrade[]
}

model Teacher {
  id      Int      @id
  email   String   @unique
  first_name    String
  last_name    String
  classes Section[]
}

model Parent {
  id Int @id
  email String
  phone_number String?
  mobile_phone String?
  work_phone String?
  archived Boolean @default(false)
  first_name String
  last_name String
  children ParentStudentRelationship[]
}

model ParentStudentRelationship {
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId Int
  parent Parent @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId Int
  relationship String

  @@id([studentId, parentId])
}


model Section {
  id Int @id
  name String
  start_term_id Int
  teachers Teacher[] 
  students Student[]
  termGrades TermGrade[]
}

model TermGrade {
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  class Section @relation(fields: [classId], references: [id])
  classId Int
  termId Int
  grade String

  @@id([studentId, classId])
}